#!/usr/bin/env php
<?php

while (true) {
    $who = readline('As a ');
    $do = readline('I want to ');
    $so = readline('So that I can ');

    $block = 'As a ' . $who . "\n";
    $block .= 'I want to ' . $do . "\n";
    $block .= 'So that I can ' . $so . "\n\n";

    file_put_contents('userstories', $block, FILE_APPEND);
    echo "\n";
}
